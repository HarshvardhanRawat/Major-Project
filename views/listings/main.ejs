<% layout('layouts/boilerplate') -%>

<section class="home-hero">
    <div class="home-hero__text">
        <p class="eyebrow">Curated stays • Hosted by locals</p>
        <h1>Plan the next memory you cannot stop talking about.</h1>
        <p class="lede">
            Discover hand-picked stays, offbeat escapes, and city pads built for modern travelers.
            Browse experiences, meet new hosts, and land somewhere inspiring tonight.
        </p>
        <div class="hero-cta">
            <a class="btn btn-dark btn-lg" href="/listings">Explore stays</a>
            <a class="btn btn-outline-dark btn-lg" href="/listings/new">List a place</a>
        </div>
        <div class="home-logos">
            <img src="/logo/logo.png" alt="Hexagon Travels compass logo">
        </div>
    </div>
    <div class="home-hero__carousel">
        <% if(heroListings && heroListings.length) { %>
            <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3600">
                <div class="carousel-inner">
                    <% heroListings.forEach((listing, index) => { %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <img class="d-block w-100 home-slide-img" src="<%= listing.image.url %>" alt="<%= listing.title %>">
                            <div class="carousel-caption text-start">
                                <p class="badge bg-light text-dark mb-2">
                                    <i class="fa-solid fa-map-pin me-1"></i>
                                    <%= listing.location %>, <%= listing.country %>
                                </p>
                                <h2><%= listing.title %></h2>
                                <p class="mb-1">₹<%= listing.price.toLocaleString("en-IN") %> • per night</p>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        <% } else { %>
            <div class="empty-hero">
                <p>No stays yet. Be the first to <a href="/listings/new">add one</a>.</p>
            </div>
        <% } %>
    </div>
</section>

<section class="home-feature-grid">
    <article>
        <h3>Stay anywhere</h3>
        <p>Beach villas, hillside cabins, even city rooftops that reset the routine.</p>
    </article>
    <article>
        <h3>Trust real hosts</h3>
        <p>Verified profiles, transparent reviews, and direct messaging built-in.</p>
    </article>
    <article>
        <h3>Earn effortlessly</h3>
        <p>Host dashboard, price tips, and payout tracking when you list your place.</p>
    </article>
</section>

<section class="home-highlight">
    <div>
        <p class="eyebrow">Community</p>
        <h2>Hosts in 40+ cities are already welcoming guests.</h2>
        <p>
            Build your listing once and keep it fresh with real-time edits, instant booking,
            and flexible cancellation settings tailored to your comfort zone.
        </p>
        <a class="btn btn-outline-dark btn-lg" href="/listings/new">Start hosting</a>
    </div>
</section>

