<% layout('layouts/boilerplate') -%>
<section class="page-header">
    <p class="eyebrow">Browse stays</p>
    <div class="page-header__actions">
        <div>
            <h1 class="page-title">All Listings</h1>
            <p class="page-subtitle">Handpicked rentals sourced from our host community.</p>
        </div>
        <a class="btn btn-dark btn-lg" href="/listings/new">Add new listing</a>
    </div>
</section>

<div class="card-grid">
    <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <article class="listing-card">
                <div class="listing-card__media">
                    <img src="<%= listing.image.url %>" alt="<%= listing.title %> image">
                </div>
                <div class="listing-card__body">
                    <div>
                        <p class="listing-location"><%= listing.location %>, <%= listing.country %></p>
                        <h3><%= listing.title %></h3>
                    </div>
                    <p class="listing-price">â‚¹<%= listing.price.toLocaleString("en-IN") %> <span>/ night</span></p>
                </div>
            </article>
        </a>
    <% } %>
</div>
