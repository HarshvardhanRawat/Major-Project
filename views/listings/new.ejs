<% layout('layouts/boilerplate') -%>
<section class="page-header">
    <p class="eyebrow">Add a stay</p>
    <h1 class="page-title">Create a New Listing</h1>
    <p class="page-subtitle">Share the details guests need and publish instantly.</p>
</section>

<section class="form-panel">
    <form method="POST" action="/listings" class="stacked-form">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="listing[title]" placeholder="Enter Title" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" rows="4" name="listing[description]" placeholder="Describe the space" required class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" id="image" name="listing[image]" placeholder="https://example.com/photo.jpg" required class="form-control">
        </div>

        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="price" class="form-label">Price (â‚¹)</label>
                <input type="number" id="price" name="listing[price]" placeholder="Enter Price" required class="form-control">
            </div>
            <div class="col-md-4">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" name="listing[location]" placeholder="Enter Location" required class="form-control">
            </div>
            <div class="col-md-4">
                <label for="country" class="form-label">Country</label>
                <input type="text" id="country" name="listing[country]" placeholder="Enter Country" required class="form-control">
            </div>
        </div>

        <div class="form-actions">
            <a class="btn btn-outline-dark btn-lg" href="/listings">Cancel</a>
            <button class="btn btn-dark btn-lg add-btn" type="submit">Create Listing</button>
        </div>
    </form>
</section>