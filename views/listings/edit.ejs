<% layout('layouts/boilerplate') -%>
<section class="page-header">
    <p class="eyebrow">Update</p>
    <h1 class="page-title">Edit your listing</h1>
    <p class="page-subtitle">Tweak the details and keep your stay up to date.</p>
</section>

<section class="form-panel">
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="stacked-form">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="listing[title]" value="<%=listing.title%>" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="listing[description]" rows="4" required class="form-control"><%=listing.description%></textarea>
        </div>

        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="price" class="form-label">Price (â‚¹)</label>
                <input type="number" id="price" name="listing[price]" value="<%=listing.price%>" required class="form-control">
            </div>
            <div class="col-md-4">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" name="listing[location]" value="<%=listing.location%>" required class="form-control">
            </div>
            <div class="col-md-4">
                <label for="country" class="form-label">Country</label>
                <input type="text" id="country" name="listing[country]" value="<%=listing.country%>" required class="form-control">
            </div>
        </div>

        <div class="form-actions">
            <a class="btn btn-outline-dark btn-lg" href="/listings/<%=listing._id%>">Cancel</a>
            <button class="btn btn-dark btn-lg add-btn">Save changes</button>
        </div>
    </form>
</section>