<% layout('layouts/boilerplate') -%>
<body>
    <h3>Edit your listing</h3>
<div class="row">
    <div class="col-8 offset-2">
        <form method="POST" action="/listings<%=listing._id%>?_method=PUT">

        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" name="listing[title]" value="<%=listing.title%>" required class="form-control"><br>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="listing[description]"  value="<%=listing.description%>" required class="form-control"><%=listing.description%></textarea><br>
        </div>

        <div class="row">
            <div class="mb-3 col-4 md-4">
                <label for="price" class="form-label">Price:</label>
                <input type="number" id="price" name="listing[price]" value="<%=listing.price%>" required class="form-control"><br>
            </div>

            <div class="mb-3 col-8 md-8">
                <label for="location" class="form-label">Location:</label>
                <input type="text" id="location" name="listing[location]" value="<%=listing.location%>" required class="form-control"><br>
            </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country:</label>
            <input type="text" id="country" name="listing[country]" value="<%=listing.country%>" required class="form-control"><br>
        </div>

        <div class="mb-3">
            <button class="btn btn-dark add-btn">Edit</button>
        </div>

        </form>
    <div>
</div>
    
</body>